<h1 class='center'>Active Businesses</h1>

<form id="live-search" action="" class="styled center container" method="post">
  <fieldset>
     <input type="text" class="text-input" id="filter" value="" placeholder="Search for a business by name, start date, etc."/>
     <span id="filter-count"></span>
  </fieldset>
</form>

<table class='responsive-table'>
  <thead>
    <tr>
      <th>Business Type</th>
      <th>Name</th>
      <th>Starting Date</th>
      <th>Owner</th>
      <th>Phone Number</th>
    </tr>
  </thead>
  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.business_type %></td>
        <td><%= business.name %></td>
        <td><%= business.start_date %></td>
        <td><%= business.owner %></td>
        <td><%= business.business_phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>

 <%= will_paginate @businesses, class: 'center pagination' %>