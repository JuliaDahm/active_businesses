<h1 class='center'>Active Businesses</h1>

<div class="container">
  <div class="search row">
    <div class="col s12">
      <input class="search-bar" type= "text" placeholder= "Look up a business by type, name, date founded, etc."/>
    </div>
  </div>
</div>

<table class='responsive-table'>
  <thead>
    <tr>
      <th>Business Type</th>
      <th>Name</th>
      <th>Date Founded</th>
      <th>Owner</th>
      <th>Phone Number</th>
    </tr>
  </thead>
  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.business_type %></td>
        <td><%= business.name %></td>
        <td><%= business.start_date %></td>
        <td><%= business.owner %></td>
        <td><%= business.business_phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>
